<?xml version="1.0" encoding="UTF-8" ?>
<!ELEMENT application (properties?, environments?, mappers?)>
<!ATTLIST application
name CDATA #REQUIRED
>

<!ELEMENT properties (property*)>

<!ELEMENT property EMPTY>
<!ATTLIST property
name CDATA #REQUIRED
value CDATA #REQUIRED
>

<!ELEMENT environments (environment+)>

<!ELEMENT environment (hikaricp, lettuce)>
<!ATTLIST environment
id CDATA #REQUIRED
>

<!ELEMENT hikaricp (jdbcUrl, username, password, driverClassName, profileSQL)>
<!ATTLIST hikaricp
id CDATA #REQUIRED
>

<!ELEMENT jdbcUrl (#PCDATA)>
<!ELEMENT username (#PCDATA)>
<!ELEMENT password (#PCDATA)>
<!ELEMENT driverClassName (#PCDATA)>
<!ELEMENT profileSQL (#PCDATA)>

<!ELEMENT lettuce (redisURI|clusterRedisURI)>
<!ATTLIST lettuce
id CDATA #REQUIRED
>

<!ELEMENT redisURI (#PCDATA)>
<!ELEMENT clusterRedisURI (#PCDATA)>

<!ELEMENT mappers (mapper*)>

<!ELEMENT mapper EMPTY>
<!ATTLIST mapper
url CDATA #IMPLIED
>